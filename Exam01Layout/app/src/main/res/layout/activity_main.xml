<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="true">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="▶TableLayout"
        android:textSize="22sp"
        android:textColor="#E80404"/>

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="1"
        android:background="#A99AFF">
        <TableRow>
            <TextView android:text="이름"
                android:textSize="15dp"
                android:layout_height="50dp"/>
            <EditText android:id="@+id/edit_name"
                android:hint="이름을 입력하세요."
                android:layout_height="50dp"
                android:layout_span="3"/>
        </TableRow>

        <TableRow android:layout_height="wrap_content">

            <Button android:layout_column="2" android:text="확인" />

            <Button android:text="취소" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="▶LinearLayout"
            android:textSize="22sp"
            android:textColor="#E80404"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00FF00"
        android:baselineAligned="true">

        <TextView
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을입력하세요."/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00FF00"
        android:baselineAligned="true"
        android:padding="5dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="▶GridLayout"
            android:textSize="22sp"
            android:textColor="#E80404"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:background="#999999">

        <TextView
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을입력하세요."/>


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:background="#999999"
        android:padding="5dp">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:visibility="invisible"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_gravity="right"
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="▶RelativeLayout"
            android:textSize="22sp"
            android:textColor="#E80404"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#778899"
        android:orientation="vertical"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:paddingTop="13.5dp"

                />

            <EditText
                android:id="@+id/btn_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn_name"
                android:hint="이름을입력하세요." />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:layout_toLeftOf="@+id/btn_cancel"
                android:layout_alignTop="@id/btn_cancel"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_below="@id/btn_name_input"
                android:layout_alignRight="@id/btn_name_input"/>

        </RelativeLayout>




    </LinearLayout>






</LinearLayout>